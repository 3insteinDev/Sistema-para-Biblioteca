  <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js"
    integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous"
    async></script>
  <title>Biblioteca Central</title>

  <!-- Bootstrap core CSS -->
  <link href="css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins';
      display: block !important;
      padding: 0 !important
    }

    main {
      margin-top: 40px;
    }

    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>


  <!-- Custom styles for this template -->
  <link href="css/sing-in.css" rel="stylesheet">
  <link rel="stylesheet" href="css/estilo.css">
  <!-- Bootstrap icones -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
</head>

<body>

  <header>
    <%- include('partials/header'); %>
  </header>

  <main class="text-center text-center container-fluid d-flex justify-content-center">
    <form action="/editandoAluno" method="post" class="col-4">
      <i class="bi bi-bookmark-check-fill" style="color: #343A40; font-size: 32px;"></i> <span
        style="color: #343A40; font-size: 32px;">Biblioteca Central</span>

      <h3 class="mb-3 mt-3 fw-normal" style="font-size: 16px;">Quer fazer cadastro de Livros? <a href="/painel"
          style="text-decoration: none; font-weight: bold;">Entre aqui.</a> </h3>

      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" placeholder="Nome da Obra" name="aluno" value='<%= editar.nome %>'>
        <label for="floatingInput">Nome do Aluno:</label>
      </div>
      <div class="form-floating mb-3">
        <input type="number" class="form-control" id="floatingInput" placeholder="Insira sua Matrícula"
          name="matricula" value='<%= editar.matricula %>'>
        <label for="floatingInput">Matrícula:</label>
      </div>
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" placeholder="Insira o Curso" name="curso" value='<%= editar.curso %>'>
        <label for="floatingInput">Curso:</label>
      </div>
      <button class="w-50 btn btn-lg btn-primary" type="submit">Atualizar Aluno</button>

    </form>

    <div class="col-5">
      <div class="container">
        <% aluno.forEach((e)=> { %>
          <div class="col card m-auto shadow-sm mb-3" style="max-width: 400px;">
            <div class="card-body">
              <div>
                <i class="bi bi-book"></i> <span>Aluno:</span>
                <%= e.nome %>
              </div>
              <div>
                <i class="bi bi-person"></i> <span>Matrícula:</span>
                <%= e.matricula %>
              </div>
              <div>
                <i class="bi bi-calendar-check"></i> <span>Curso:</span>
                <%= e.curso %>
              </div>
              <div class="d-flex justify-content-between align-items-center mt-3">
                <div class="btn-group">
                  <a href='/excluirAlunos/<%= e._id %>'><button type="button"
                      class="btn btn-sm btn-outline-secondary">Excluir</button></a>
                  <a href='/editarAlunos/<%= e._id %>'><button type="button"
                      class="btn btn-sm btn-outline-secondary">Editar</button></a>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
  </main>

</body>

</html>