<!doctype html>
<html lang="pt_BR">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.88.1">
    <script src="https://cdn.jsdelivr.net/npm/masonry-layout@4.2.2/dist/masonry.pkgd.min.js"
        integrity="sha384-GNFwBvfVxBkLMJpYMOABq3c+d3KnQxudP/mGPkzpZSTYykLBNsZEnG2D9G/X/+7D" crossorigin="anonymous"
        async></script>
    <title>Biblioteca Central</title>

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins';
            display: block !important;
            padding: 0 !important
        }

        main{
            margin-top: 40px;
        }

        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }

    </style>


    <!-- Custom styles for this template -->
    <link href="css/sing-in.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/css/estilo.css">
    <!-- Bootstrap icones -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.1/font/bootstrap-icons.css">
</head>

<body>
    <header>
        <%- include('partials/header'); %>
    </header>
    
    

    <main class="text-center text-center container-fluid d-flex justify-content-center">
        <form action="/editando" method="post" class="col-4">
            <i class="bi bi-bookmark-check-fill" style="color: #343A40; font-size: 32px;"></i> <span
                style="color: #343A40; font-size: 32px;">Biblioteca Central</span>

            <h1>Cadastro de Livros</h1>

            <h3 class="mb-3 mt-3 fw-normal" style="font-size: 16px;">Quer fazer um cadastro de alunos?<a
                    href="/painelAluno" style="text-decoration: none; font-weight: bold;">Entre aqui.</a> </h3>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="Nome da Obra" name="titulo" value='<%= editar.titulo %>'>
                <label for="floatingInput">Título da Obra</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="Usuário" name="autor" value='<%= editar.nomeAutor %>'>
                <label for="floatingInput">Nome do Autor</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="Ano Publicação" name="ano" value='<%= editar.anoPublicacao %>'>
                <label for="floatingInput">Ano de Publicação</label>
            </div>
            <button class="w-50 btn btn-lg btn-primary" type="submit">Atualizar Livro</button>

        </form>
        <div class="col-5">
            <div class="container">
                <% livro.forEach((e)=> { %>
                    <div class="col card m-auto shadow-sm mb-3" style="max-width: 400px;">
                        <div class="card-body">
                            <div>
                                <i class="bi bi-book"></i> <span>Título da Obra:</span>
                                <%= e.titulo %>
                            </div>
                            <div>
                                <i class="bi bi-person"></i> <span>Nome do Autor:</span>
                                <%= e.nomeAutor %>
                            </div>
                            <div>
                                <i class="bi bi-calendar-check"></i> <span>Ano de Publicação:</span>
                                <%= e.anoPublicacao %>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href='/excluir/<%= e._id %>'><button type="button" class="btn btn-sm btn-outline-secondary">Excluir</button></a>
                                    <a href='/editar/<%= e._id %>'><button type="button" class="btn btn-sm btn-outline-secondary">Editar</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </main>

</body>

</html>